<h2>Sign-In Page</h2>
<form method="post" action="/Account/SignIn">
    <table border="0">
        <tr>
            <td colspan="2"><label>Login using your</label></td>
        </tr>
        <tr>
            <td><input type="radio" name="loginType" onclick="enableEmail()" checked/></td>
            <td><label>Email Id</label></td>
            <td><input id="txtEmail" type="text" name="email" placeholder="Enter Email Id" /></td>
        </tr>
        <tr>
            <td><input type="radio" name="loginType" onclick="enableUsername()"/></td>
            <td><label>Username</label></td>
            <td><input id="txtUsername" type="text" name="username" placeholder="Enter Username" /></td>
        </tr>
        <tr>
            <td></td>
            <td><label>Password</label></td>
            <td><input type="password" name="password" placeholder="Enter password" /></td>
        </tr>
        <tr>
            <td></td>
            <td align="right"><button type="submit">Login</button></td>
            <td><button type="reset">Reset Form</button></td>
        </tr>
    </table>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            enableEmail();
        });
        function enableEmail() {
            $('#txtEmail').prop('disabled', false);
            $('#txtUsername').prop('disabled', true);
            ClearFields();
        }
        function enableUsername() {
            $('#txtUsername').prop('disabled', false);
            $('#txtEmail').prop('disabled', true);
            ClearFields();
        }
        function ClearFields()
        {
            $('#txtUsername').val('');
            $('#txtEmail').val('');
        }
    </script>
}